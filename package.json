{
  "name": "@sparkstone/pocketbase-schema",
  "version": "0.6.0",
  "type": "module",
  "source": "src/main.ts",
  "exports": {
    "require": "./dist/main.cjs",
    "default": "./dist/main.modern.js",
    "main": "./dist/main.cjs",
    "module": "./dist/main.module.js",
    "unpkg": "./dist/main.umd.js"
  },
  "bin": {
    "pocketbase-schema": "./dist/pocketbase-schema.esm.js"
  },
  "scripts": {
    "build": "microbundle",
    "dev": "microbundle watch",
    "watch": "vitest --watch"
  },
  "license": "MIT",
  "dependencies": {
    "cosmiconfig": "^9.0.0",
    "lodash-es": "^4.17.21",
    "microbundle": "^0.15.1",
    "pocketbase": "^0.25.0",
    "prettier": "^3.4.2"
  },
  "prettier": {
    "jsxSingleQuote": true,
    "bracketSameLine": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 100
  },
  "microbundle": {
    "target": "node"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "vitest": "^3.0.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/odama626/pocketbase-schema.git"
  },
  "bugs": {
    "url": "https://github.com/odama626/pocketbase-schema/issues"
  },
  "homepage": "https://github.com/odama626/pocketbase-schema#readme"
